      ],
      "parameters": {
        "jsCode": "const today = new Date();\nconst formatted = today.toLocaleDateString('en-US', {\n  year: 'numeric',\n  month: 'long',\n  day: '2-digit',\n  timeZone: 'America/New_York'\n});\n\nreturn [{ json: { formattedDate: formatted } }];"
      },
      "typeVersion": 2
