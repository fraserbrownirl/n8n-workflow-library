      ],
      "parameters": {
        "jsCode": "// v2 syntax \u2013 must return an array of { json: {...} }\nconst lines = $json.affirmations\n  .split('\\n')\n  .map(s => s.trim())\n  .filter(Boolean);\n\nconst pick = lines.length\n  ? lines[Math.floor(Math.random() * lines.length)]\n  : 'I am enough.';\n\nreturn [{\n  json: {\n    ...$json,\n    affirmation: pick\n  }\n}];"
      },
